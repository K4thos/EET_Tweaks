%index2%
>>>>>>>>

COPY - ~EET_Tweaks/temp/CHARSND.2DA~ ~EET_Tweaks~
	COUNT_2DA_COLS "cntcol"
	COUNT_2DA_ROWS (cntcol - 1) "cntrow"
